// MODIFICATIONS FOR DECIDIM-OCL

@font-face {
  font-family: 'Source Sans Pro';
  font-weight: 400;
  src: font-url('SourceSansPro-Regular') format('truetype');
}

@font-face {
  font-family: 'Source Sans Pro';
  font-weight: 400;
  font-style: italic;
  src: font-url('SourceSansPro-Italic') format('truetype');
}

@font-face {
  font-family: 'Source Sans Pro';
  font-weight: 700;
  src: font-url('SourceSansPro-Bold') format('truetype');
}

@font-face {
  font-family: 'Source Sans Pro';
  font-weight: 600;
  src: font-url('SourceSansPro-SemiBold') format('truetype');
}

.leaflet-control-layers .leaflet-control-layers-toggle {
  background-image: url('data:image/png;base64,');
}

// Fix map layer icons on mobile
.leaflet-control-layers .leaflet-control-layers-toggle {
	background-image: url(<%= asset_path "layers.png" %>);
}
.leaflet-retina .leaflet-control-layers .leaflet-control-layers-toggle {
	background-image: url(<%= asset_path "layers-2x.png" %>);
}

// Default image for organizations on home page
#highlighted-assemblies .card__image-top {
  background-image: url(<%= asset_path 'organization-default-image.png' %>);
}

